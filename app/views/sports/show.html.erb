    <%= button_to "Destroy this sport", sport_path(@sport), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-600 hover:bg-gray-500 transition font-medium" %>
  </div>
    <%= link_to "Back to sports", sports_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-600 hover:bg-gray-500 transition inline-block font-medium" %>
  </div> 
</div>
